<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_max_temperature_label"
        android:layout_weight="1"
        style="@style/for_tv_in_daily_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_temp"/>

    <TextView
        android:id="@+id/tv_max_temperature"
        android:layout_weight="1"
        style="@style/for_tv_in_daily_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature"/>

    <TextView
        android:id="@+id/tv_min_temperature_label"
        android:layout_weight="1"
        style="@style/for_tv_in_daily_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_temp"/>

    <TextView
        android:id="@+id/tv_min_temperature"
        android:layout_weight="1"
        style="@style/for_tv_in_daily_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature"/>


    <ImageView
        android:id="@+id/iv_daily_weather_icon"
        android:layout_weight="1"
        android:src="@drawable/cloudy_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/icon_weather"/>

    <TextView
        android:id="@+id/tv_day_name_label"
        android:layout_weight="6"
        style="@style/for_tv_in_daily_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_of_the_week_example"/>

</LinearLayout>