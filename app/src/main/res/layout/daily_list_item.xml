<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_gradient"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_circle_max_temperature"
            android:src="@drawable/bg_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_max_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature"
            android:layout_alignTop="@id/iv_circle_max_temperature"
            android:layout_alignRight="@id/iv_circle_max_temperature"
            android:layout_alignEnd="@id/iv_circle_max_temperature"
            android:layout_alignBottom="@id/iv_circle_max_temperature"
            android:layout_alignLeft="@id/iv_circle_max_temperature"
            android:layout_alignStart="@id/iv_circle_max_temperature"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_circle_min_temperature"
            android:src="@drawable/bg_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_min_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature"
            android:layout_alignTop="@id/iv_circle_min_temperature"
            android:layout_alignRight="@id/iv_circle_min_temperature"
            android:layout_alignEnd="@id/iv_circle_min_temperature"
            android:layout_alignBottom="@id/iv_circle_min_temperature"
            android:layout_alignLeft="@id/iv_circle_min_temperature"
            android:layout_alignStart="@id/iv_circle_min_temperature"
            android:gravity="center"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_daily_weather_icon"
        android:src="@drawable/clear_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_day_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="@string/day_of_the_week_example"/>

</LinearLayout>